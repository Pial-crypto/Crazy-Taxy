<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".MapsActivityrental"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:iconifiedByDefault="false"
        android:id="@+id/searchViewCurrentLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:queryHint="Current location"
        tools:ignore="MissingConstraints" />

    <SearchView
        android:id="@+id/searchViewDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:iconifiedByDefault="false"
        android:queryHint="Destination"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewCurrentLocation"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/howmanytime"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:hint="How many times(hr) do you need?"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/pricetextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchViewCurrentLocation"
        app:layout_constraintVertical_bias="0.337" />

    <fragment
        android:id="@+id/map4"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="360dp"
        android:layout_height="349dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewDestination"
        app:layout_constraintVertical_bias="0.605"
        tools:context=".MapsActivityrental" />

    <Button
        android:id="@+id/select_vehicle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="248dp"
        android:backgroundTint="@color/black"
        android:text="Select Vehicle"
        app:layout_constraintBottom_toTopOf="@+id/pricetextview"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/descriptionedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add any special note if you want"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/howmanytime"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694" />

    <Button

        android:id="@+id/confirmpickupbutton"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Confirm your pickup location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map4" />


    <!-- Your layout for confirming pickup location goes here -->

    <TextView
        android:id="@+id/findingyourridetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_drive_eta_24"
        android:gravity="center"
        android:text="Finding your driver"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map4"
        app:layout_constraintVertical_bias="0.619"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/pricetextview"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchViewCurrentLocation"
        app:layout_constraintVertical_bias="0.789" />


</androidx.constraintlayout.widget.ConstraintLayout>
