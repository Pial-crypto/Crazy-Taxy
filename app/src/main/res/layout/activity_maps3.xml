<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:id="@+id/cl"
    tools:context=".MapsActivity3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchViewCurrentLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:iconifiedByDefault="false"

        android:queryHint="Current location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <SearchView
        android:id="@+id/searchViewDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:background="@android:color/transparent"
        android:iconifiedByDefault="false"
        android:queryHint="Destination"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toTopOf="@+id/pickupbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewCurrentLocation"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


    <!-- Your layout for confirming pickup location goes here -->







    <Button
        android:id="@+id/pickupbutton"
        android:layout_width="369dp"
        android:layout_height="53dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:text="Select your picup date and time"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/map5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

    <fragment
        android:id="@+id/map5"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="380dp"
        android:layout_height="409dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788"
        tools:context=".MapsActivity3" />

    <Button
        android:id="@+id/select_vehicle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/black"
        android:text="Select Vehicle"
        app:layout_constraintBottom_toTopOf="@+id/pricetextview"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickupbutton"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/descriptionedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Add any special note if you want"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/pickupbutton"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662" />

    <Button

        android:id="@+id/confirmpickupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Confirm your pickup location"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map5"
        app:layout_constraintVertical_bias="0.882"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/findingyourridetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_drive_eta_24"
        android:gravity="center"
        android:text="Finding your driver"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map5"
        app:layout_constraintVertical_bias="0.898"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/pricetextview"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginTop="560dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="@color/white"

        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchViewCurrentLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>
